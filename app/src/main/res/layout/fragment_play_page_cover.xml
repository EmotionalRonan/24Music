<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:padding="80dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <info.emotionalronan.a24music.widget.AlbumCoverView
        android:id="@+id/album_cover_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"/>

    <!--这个可以改成只显示图片就行-->
    <ImageView
        android:elevation="50dp"
        android:id="@+id/album_cover_view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <!--单行歌词-->
    <me.wcy.lrcview.LrcView
        android:layout_marginTop="50dp"
        android:id="@+id/lrc_view_single"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        lrc:lrcAnimationDuration="1000"
        lrc:lrcCurrentTextColor="@color/black"
        lrc:lrcDividerHeight="10dp"
        lrc:lrcNormalTextColor="@color/black"
        lrc:lrcTextSize="@dimen/text_size_common" />
</LinearLayout>